@using GOBrothers.HtmlHelpers
@model GOBrothers.Areas.Admin.Models.AdminAlbumsImagesListViewModel

@{
    ViewBag.Title = "AdminImages";
}

@foreach (var i in Model.AlbumImages)
{
    Html.RenderPartial("AdminImageSummaryPartial", i);
}

<br />
<p>@Html.ActionLink("Додати зображення в альбом", "AlbumImageCreate", "AdminGallery", new { area = "admin" }, null)</p>

<!-- Message if image deleted -->
<h4 style="color:red">@TempData["message"]</h4>

<!-- Pagination -->
@if (Model.PagingInfo.TotalPages > 1)
{
    <div class="pager">
        @Html.PageLinks(Model.PagingInfo, x => Url.Action("AdminImagesList", new { page = x, albumId = Model.AlbumId }))
    </div>
}

