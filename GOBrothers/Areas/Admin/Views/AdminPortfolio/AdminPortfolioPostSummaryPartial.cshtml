@model GOBrothers.Domain.Entities.PortfolioPost

<div class="item">
    <h3>@Html.RouteLink(Model.Title, new { controller = "AdminPortfolio", action = "PortfolioEdit", area = "admin", portfolioPostId = Model.Id }) </h3>
    <img src="~/Content/PortfolioImages/@Model.Id.ToString()/Logo/logo_small.jpg" alt="Image" class="logo" />
    @Html.Raw(Model.ShortContent)
    <p>Рубрика: @Model.PortfolioCategory.Name</p>
    @{
        string Created = "";
        if (Model.Created != null) { Created = Model.Created.Value.ToString("dd.MM.yyyy H:mm:ss"); }
    }
    <div style="color:#808080;font-size:10px;">Додано/редаговано: @Created</div>

    <!-- Button "Delete of post" -->
    @using (Html.BeginForm("PortfolioDelete", "AdminPortfolio", new { area = "admin" }))
    {
        @Html.Hidden("portfolioPostId", Model.Id)
        <input type="submit" value="Delete" />
    }

</div>


