    <li @ActiveItemByControllerAction("AdminGallery")>@Html.ActionLink("Альбоми(ред.)", "AdminAlbumsList", "AdminGallery", new { area = "admin" }, null)</li>
    <li @ActiveItemByControllerAction("AdminGallery")>@Html.ActionLink("Світлини(ред.)", "AdminImagesList", "AdminGallery", new { area = "admin" }, null)</li>
</ul>

