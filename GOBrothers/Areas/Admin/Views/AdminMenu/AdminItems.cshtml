    ViewBag.Title = "Меню администратора";
}

@helper ActiveItemByControllerAction(string controllerName)
{
    if (controllerName == ViewContext.ParentActionViewContext.RouteData.Values["controller"].ToString())
    {
        @:class="active"
    }
}

