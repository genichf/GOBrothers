@model GOBrothers.Domain.Entities.Post

<div class="item">
    <h3>@Html.RouteLink(Model.Title, new { controller = "Admin", action = "Edit", area = "admin", postId = Model.Id }) </h3>
    <img src="~/Content/PostImages/@Model.Id.ToString()/Logo/logo_small.jpg" alt="Image" class="logo" />
    @Html.Raw(Model.ShortContent)
    <p>Рубрика: @Model.Blog.Name</p>
    @{
        string Created = "";
        if (Model.Created != null) { Created = Model.Created.Value.ToString("dd.MM.yyyy H:mm:ss"); }
    }
    <div style="color:#808080;font-size:10px;">Додано/редаговано: @Created</div>

    <!-- Button "Delete of post" -->
    @using (Html.BeginForm("Delete", "Admin", new { area = "admin" }))
    {
        @Html.Hidden("postId", Model.Id)
        <input type="submit" value="Delete" />
    }

</div>

    