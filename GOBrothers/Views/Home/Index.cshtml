@model GOBrothers.Models.PostsListViewModel    
@{
        ViewBag.Title = "Наша компанія";
    }

    <div class="my-row">
        <div id="buttonDevelop" style="padding:0px; float:left">
            <a href="@Url.Action("Develop", "Center")">
                <img id="imgButtonDevelop" alt="Develop Center" src="~/Content/images/DevelopCenter.png">
                <img id="imgButtonDevelopOver" alt="Develop Center (over)" src="~/Content/images/DevelopCenterOver.png" style="display:none">
            </a>
        </div>
        <div id="buttonDesign" style="padding:0px; float:left">
            <a href="@Url.Action("Design", "Center")">
                <img id="imgButtonDesign" alt="Design Center" src="~/Content/images/DesignCenter.png">
                <img id="imgButtonDesignOver" alt="Design Center (over)" src="~/Content/images/DesignCenterOver.png" style="display:none">
            </a>
        </div>
        <div id="buttonProfessional" style="padding:0px;">
            <a href="@Url.Action("Professional", "Center")">
                <img id="imgButtonProfessional" alt="Professional" src="~/Content/images/Professional.png">
                <img id="imgButtonProfessionalOver" alt="Professional (over)" src="~/Content/images/ProfessionalOver.png" style="display:none">
            </a>
        </div>
    </div>

<div class="container" style="margin:0px; padding:0px; padding-top:20px;">
    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
            <li data-target="#carousel-example-generic" data-slide-to="1"></li>
            <li data-target="#carousel-example-generic" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="~/Content/images/slide0.png" alt="Visual Studio 2015">
                <div class="carousel-caption">
                    Visual Studio 2015
                </div>
            </div>
            <div class="item">
                <img src="~/Content/images/slide1.png" alt="ASP.NET MVC">
                <div class="carousel-caption">
                    ASP.NET MVC
                </div>
            </div>
            <div class="item">
                <img src="~/Content/images/slide2.png" alt="Graphics">
                <div class="carousel-caption">
                    Graphics
                </div>
            </div>
            Visual Studio 2015 - ASP.NET MVC - Graphics
        </div>

        <!-- Controls -->
        <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
    <div class="row">
        <div class="col-sm-12">
            <hr />
            <h4>Останні статті:</h4>
            @foreach (var p in Model.Posts)
            {
                <div class="item">
                    <h3>@Html.RouteLink(p.Title, new { controller = "Post", action = "PostById", postId = p.Id })</h3>
                    @Html.Raw(p.ShortContent)
                    @{
                        string Created = "";
                        if (p.Created != null) { Created = p.Created.Value.ToString("dd.MM.yyyy H:mm:ss"); }
                    }
                    <p style="color:#808080;font-size:10px;">Додано/редаговано: @Created</p>
                    <p style="font-size: 12px;">Категорія: @p.Blog.Name</p>
                </div>
             }
            <hr />
        </div>
    </div>

